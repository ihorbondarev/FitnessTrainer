@model FitnessTrainer.ViewModels.WorkoutPlanViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалення</h1>

<h3>Підтвердіть видалення плану вправ: @Model.Name</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 mt-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        @if (Model.ImagePathString != null)
        {
            <dd class="col-sm-10">
                <img src="~/images/@Model.ImagePathString"
                     class="rounded" height="120" width="120"
                     asp-append-version="true" />
            </dd>
        }
        else
        {
            <dd>Зображення немає</dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePathString)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagePathString)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-outline-danger" />
    </form>
</div>
<br />
<hr />
<a class="btn btn-link" href="javascript:history.go(-1)">< Повернутися до списку</a>