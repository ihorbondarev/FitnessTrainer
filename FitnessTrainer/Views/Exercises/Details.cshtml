@model FitnessTrainer.ViewModels.ExerciseViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Інформація</h1>

<div>
    <h4>Вправа @Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 mb-4">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.ImagePathString"
                 class="rounded"
                 height="200"
                 asp-append-version="true" />
        </dd>
        <dt class="col-sm-3 col-4 mb-4">
            @Html.DisplayNameFor(model => model.NumberOfApproaches)
        </dt>
        <dd class="col-sm-9 col-8">
            @Html.DisplayFor(model => model.NumberOfApproaches)
        </dd>
        <dt class="col-sm-3 col-4 mb-4">
            @Html.DisplayNameFor(model => model.NumberOfRepetitions)
        </dt>
        <dd class="col-sm-9 col-8">
            @Html.DisplayFor(model => model.NumberOfRepetitions)
        </dd>
        <dt class="col-sm-3 col-4 mb-4">
            @Html.DisplayNameFor(model => model.TimeBetweenSets)
        </dt>
        <dd class="col-sm-9 col-8">
            @Html.DisplayFor(model => model.TimeBetweenSets)
        </dd>
        <dt class="col-sm-3 col-4 mb-4">
            @Html.DisplayNameFor(model => model.RestTimeAtTheEnd)
        </dt>
        <dd class="col-sm-9 col-8">
            @Html.DisplayFor(model => model.RestTimeAtTheEnd)
        </dd>
        <dt class="col-sm-2 mb-4">
            @Html.DisplayNameFor(model => model.ImagePathString)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagePathString)
        </dd>
        <dt class="col-sm-2 mb-4">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.Id">Змінити</a>
</div>
<hr />
<br />
<a class="btn btn-link" href="javascript:history.go(-1)">< Повернутися до списку</a>