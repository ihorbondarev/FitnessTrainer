@model FitnessTrainer.ViewModels.ExerciseViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-5">@Localizer["Header"]</h1>
<br />
<div class="row">
    <div class="col-md-9 col-sm-12 mt-5">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@Localizer["ExerciseName"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@Localizer["Image"]</label>
                <div class="custom-file">
                    <input asp-for="ImagePath" class="custom-file-input" type="file" id="customFile">
                    <label class="custom-file-label" for="customFile" data-browse="@Localizer["InputImageData"]">@Localizer["ImageChoose"]</label>
                </div>
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@Localizer["Description"]</label>
                <textarea asp-for="Description" class="form-control" rows="3" style="min-height: 50px;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@Localizer["NumberOfApproaches"]</label>
                <input asp-for="NumberOfApproaches" class="form-control" />
                <span asp-validation-for="NumberOfApproaches" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@Localizer["NumberOfRepetitions"]</label>
                <input asp-for="NumberOfRepetitions" class="form-control" />
                <span asp-validation-for="NumberOfRepetitions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@Localizer["TimeBetweenSets"]</label>
                <input asp-for="TimeBetweenSets" class="form-control" type="time" />
                <span asp-validation-for="TimeBetweenSets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@Localizer["RestTimeAtTheEnd"]</label>
                <input asp-for="RestTimeAtTheEnd" class="form-control" type="time" />
                <span asp-validation-for="RestTimeAtTheEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["ButtonAdd"]" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<br />
<div>
    <a class="btn btn-link" asp-action="Index">@Localizer["BackLink"]</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
