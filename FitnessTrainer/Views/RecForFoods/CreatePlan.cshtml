@model FitnessTrainer.DomainEntities.Entity.RecForFood

@{
    ViewData["Title"] = "CreatePlan";
}

<h1>Створення плану харчування</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePlan" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<hr />

<div>
    <a class="btn btn-link" asp-action="Index">< Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
