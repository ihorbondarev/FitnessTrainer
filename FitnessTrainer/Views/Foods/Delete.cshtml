@model FitnessTrainer.ViewModels.FoodViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Delete";
}

<h1 class="mt-5">@Localizer["Header"]: @Model.Name?</h1>

<br />
<div class="mt-5">
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["Calories"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Calories)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Proteins"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Proteins)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Fats"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fats)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Carbohydrates"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carbohydrates)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer["DeleteButton"]" class="btn btn-outline-danger" />

    </form>
</div>
<br />
<a class="btn btn-link" asp-action="Index">@Localizer["BackLink"]</a>
